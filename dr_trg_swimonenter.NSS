void main() 
{
    ACR_TriggerOnEnter();

	object oMasterWP = GetLocalObject(OBJECT_SELF, "oMasterWP");
	  if(oMasterWP == OBJECT_INVALID)
	 	{oMasterWP = GetWaypointByTag("dr_lockdoor_up_WP");
		SetLocalObject(OBJECT_SELF, "oMasterWP", oMasterWP);
		}
	  int nLevel = GetLocalInt(oMasterWP, "nLevel");
	if(nLevel > 2)
		{
		SetLocalInt(OBJECT_SELF, "ACR_SWIM_DC", 22 - nLevel);
		EnterWater(OBJECT_SELF, GetEnteringObject());
		if(nLevel == 5)
				{SetLocalInt(GetObjectByTag("DR_Swim_Well"), "ACR_SWIM_DC", 10);
				}
			if(nLevel == 10)
				{SetLocalInt(GetObjectByTag("DR_Swim_Well"), "ACR_SWIM_DC", 10);
				}
		}
	else {DelayCommand(5.0, SendMessageToPC(GetEnteringObject(), "You cling to the rocks. When the waters are still, perhaps you can climb to safety."));
		}
}