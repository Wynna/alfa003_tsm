void main()
{
    ACR_CreatureOnSpellCastAt();

    // Custom code goes here.
	
	//Deandragon Quest B

	
	if((GetTag(OBJECT_SELF) == "abr_cr_hu_brownie_quest") || (GetTag(OBJECT_SELF) == "abr_cr_fy_jermlaine_quest"))
		{SpeakString("Flee! Take the ripe pods!", TALKVOLUME_TALK);
		 SendMessageToPC(GetLastSpellCaster(), "The fey dashes for the large tree, collecting fallen pods, then vanishes!");
		 DestroyObject(OBJECT_SELF, 2.0);
		 object oMyTree = GetLocalObject(OBJECT_SELF, "oMyTree");
			 if(oMyTree == OBJECT_INVALID)
			 	{oMyTree = GetObjectByTag("fey_chocolate_tree");
				 SetLocalObject(OBJECT_SELF, "oMyTree", oMyTree);
				} 
			 SetUseableFlag(oMyTree, FALSE);
		 }
		 
		 
		 		
		//Deandragon Quest E_Fire
		 
		if(GetTag(OBJECT_SELF) == "003_cre_sundabar_vigilant")
			{object oSubdue = GetLastSpellCaster();
			 SetLocalObject(OBJECT_SELF, "oSubdue", oSubdue);
			 SpeakString("Do not resist!", TALKVOLUME_TALK);
			 ActionMoveToObject(oSubdue, TRUE, 1.0);
			 if(GetLocalInt(OBJECT_SELF, "NLD") == 0)
			 	{ACR_ToggleNLDMode(OBJECT_SELF);
				 SetLocalInt(OBJECT_SELF, "NLD", 1);
				 }
			 ActionAttack(oSubdue, FALSE);
			 
			 }

}