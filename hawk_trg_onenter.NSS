void main()
{
    ACR_TriggerOnEnter();

    // Custom code goes here.
	
object oQuester=GetEnteringObject();

if((GetTag(OBJECT_SELF) == "hawk_raid_01") && (GetIsPC(oQuester)) && (GetLocalInt(OBJECT_SELF, "Triggered") !=1))
 	{SetLocalInt(OBJECT_SELF, "Triggered", 1);
	if(ACR_RetrieveQuestState("hawk_raid_01", oQuester) == 1)
		{SendMessageToPC(oQuester, "Ahead, a wolf raises its face from the guts of a dead deer. The wolf's muzzle wrinkles back from fangs dripping with blood.");
	 	 ACR_AddPersistentJournalQuestEntry("hawk_raid_01", 2, GetEnteringObject(), FALSE, FALSE, FALSE, FALSE);
		 object oWolfSpawn = GetWaypointByTag("hawk_raid_01_wp");
		CreateObject(OBJECT_TYPE_CREATURE, "abr_cr_an_wild_dogwolf", GetLocation(oWolfSpawn));
		}	
	}
	
}